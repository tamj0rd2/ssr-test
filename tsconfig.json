{
  "compilerOptions": {
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "rootDir": "./",
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
