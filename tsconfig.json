{
  "compilerOptions": {
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "./types"],
    "rootDir": "./",
    "baseUrl": "./",
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
